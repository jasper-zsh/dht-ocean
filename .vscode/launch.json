    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build Bloom",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/ocean",
            "cwd": "${workspaceFolder}/ocean",
            "args": ["-bloom"]
        },
        {
            "name": "Run crawler",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/crawler",
            "cwd": "${workspaceFolder}/crawler",
            "args": ["-f", "etc/crawler.yaml"]
        }
    ]
}